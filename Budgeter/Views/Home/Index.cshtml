@model Budgeter.Models.ApplicationUser




            <div class="row">
                <!-- Page Header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!--End Page Header -->
                @if (Model.HouseHoldId == null)
                {
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Create a Household</h3>
                            </div>
                            <div class="panel-body">
                                <form action="/households/create" role="form" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <input type="text" name="Name" class="form-control" maxlength="15" placeholder="Enter a Name" required />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success btn-block" type="submit"><i class="fa fa-plus-square" aria-hidden="true"></i> Create Household</button>
                                    </div>
                                </form>
                                @if(TempData["warn"] == "length")
                                {
                                    <div class="text-danger">An household must have a name.</div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

   

