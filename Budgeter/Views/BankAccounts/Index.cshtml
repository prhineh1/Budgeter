@model IEnumerable<Budgeter.Models.BankAccount>
@using Budgeter.Models;
@using Budgeter.Helper;
@using Microsoft.AspNet.Identity;

@{
    var userId = User.Identity.GetUserId();
    ApplicationDbContext db = new ApplicationDbContext();
    var user = db.Users.Find(userId);

}

<div class="row">
    <div class="col-md-4">
        <h2 class="text-info"><i class="fa fa-bank" aria-hidden="true"></i> Accounts</h2>
    </div>
    @if (RoleHelper.IsUserInRole(userId, "Head") || RoleHelper.IsUserInRole(userId, "Admin"))
    {
        <div class="col-md-4 col-md-offset-4" style="margin-top:10px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Add an Account</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("create", "bankaccounts", new { HouseholdId = user.HouseHoldId }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="text" name="Name" placeholder="Account Name" pattern="\w+" title="alphanumeric characters" required />
                        <button type="submit" class="btn btn-info"><i class="fa fa-plus-square-o" aria-hidden="true"></i> Create</button>
                    }
                </div>
            </div>
        </div>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Balance</th>
            <th>View Transactions</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>
                    @account.Name
                </td>
                <td>
                    $@BankAccountHelper.Balance(account.Id)
                </td>
                <td>
                    <a href="@Url.Action("index", "transactions", new {accountId = account.Id })">View Transactions</a>
                </td>
                <td>
                    @if (RoleHelper.IsUserInRole(userId, "Head") || RoleHelper.IsUserInRole(userId, "Admin"))
                    {
                        <div class="btn-group">
                            <button data-toggle="modal" data-target="#transactionModal" class="addTransaction btn btn-success"><i class="fa fa-plus-square" aria-hidden="true"></i> Add Transaction</button>
                            <button class="btn btn-danger" type="button" data-toggle="modal" id="DeleteAccountButton" data-target="#deleteAccount"><i class="fa fa-times" aria-hidden="true"></i> Delete Account</button>
                        </div>
                    }
                    else
                    {
                        <button data-toggle="modal" data-target="#transactionModal" class="addTransaction btn btn-success btn-lg"><i class="fa fa-plus-square" aria-hidden="true"></i> Add Transaction</button>
                    }
                </td>
            </tr>
            using (Html.BeginForm("Delete", "BankAccounts", new { returnUrl = Request.Url.AbsoluteUri }, FormMethod.Post, new { id = "DeleteAccountForm" }))
            {
                @Html.AntiForgeryToken()
                <input value="@account.Id"z name="id" class="accountId" style="display:none;" />
            }
            using (Html.BeginForm("create", "transactions", FormMethod.Post, new { role = "form", id = "transactionForm" }))
            {
                @Html.AntiForgeryToken()
                <input value="@account.Id" name="BankAccountId" style="display:none;" />
            }

        }
    </tbody>
</table>

<!---Modal-->

    <div id="transactionModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add Transaction</h4>
                </div>
                <div class="modal-body" id="transactionBody">
                    <label for="expense">Expense</label>
                    <input type="radio" form="transactionForm" name="Expense" id="expense" value="true" checked />
                    <label for="income">Income</label>
                    <input type="radio" form="transactionForm" name="Expense" id="income" value="false" />
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                        <input type="text" id="Date" form="transactionForm" style="width:150px;" name="Date" placeholder="Date" class="form-control" readonly required />
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
                        <input type="text" style="width:150px;" form="transactionForm" pattern="[0-9]+(\.[0-9][0-9]?)?" title="Dollars and cents" name="Amount" placeholder="Amount" required class="form-control" />
                    </div>
                    <br />
                    @Html.DropDownList("BudgetItemId", null, new { @class = "form-control", style="width:200px;" })   
                    <br id="lastBreak" />
                    <button class="btn btn-lg btn-success btn-block" form="transactionForm" id="transactionSubmit" type="submit"><i class="fa fa-plus-circle"></i> Add</button>
                </div>
            </div>
        </div>
    </div>

<!--Delete Account-->

    <div id="deleteAccount" class="modal fade" role="dialog">
        <div class="modal-dialog" style="width:40%; background-color:white;">
            <div class="modal-header">
                <h4 class="modal-title">Are You sure you want to delete this Account?</h4>
            </div>
            <div class="modal-body">
                <h5 class="text-danger">This Action will Remove all transactions associated with this account! <br />Do you still want to continue?</h5><br />
                <div style="display:flex; justify-content:space-around">
                    <button class="btn btn-success" form="DeleteAccountForm" type="submit">Yes</button>
                    <button class="btn btn-danger" type="button" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <script>

        var budgetNode = document.getElementById('BudgetItemId');
        var submitNode = document.getElementById('lastBreak');
        document.getElementById('income').addEventListener("click", function () {
            document.getElementById('transactionBody').removeChild(budgetNode)
        });

        document.getElementById('expense').addEventListener("click", function () {
            document.getElementById('transactionBody').insertBefore(budgetNode, submitNode)
        });

        $('#Date').datepicker();

